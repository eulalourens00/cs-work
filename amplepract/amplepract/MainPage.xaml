<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="amplepract.MainPage">

    <ScrollView>
        <VerticalStackLayout Spacing="20" Padding="30,20">

            <Label Text="Конвертер систем счисления" 
                   FontSize="24" FontAttributes="Bold"
                   HorizontalOptions="Center"
                   TextColor="{StaticResource Primary}"/>

            <Frame 
                   Padding="15"
                   CornerRadius="10">
                <VerticalStackLayout Spacing="10">
                    <Label Text="Введите число в десятичной системе:" FontSize="16" FontAttributes="Bold"/>

                    <Entry x:Name="DecimalEntry"
                           Placeholder="Введите целое число..."
                           Keyboard="Numeric"
                           TextChanged="OnDecimalNumberChanged"/>

                    <Label x:Name="ErrorLabel"
                           TextColor="Red" FontSize="14"
                           IsVisible="False"/>
                </VerticalStackLayout>
            </Frame>

            <Frame BackgroundColor="LightBlue"
                   Padding="15"
                   CornerRadius="10">
                <VerticalStackLayout Spacing="15">
                    <Label Text="Результаты конвертации:" 
                           FontSize="16" FontAttributes="Bold"/>

                    <VerticalStackLayout Spacing="5">
                        <Label Text="Двоичная (2):" 
                               FontSize="14" FontAttributes="Bold"
                               TextColor="{StaticResource Primary}"/>
                        <Label x:Name="BinaryResult" 
                               FontSize="14" FontFamily="Courier New"/>
                    </VerticalStackLayout>

                    <VerticalStackLayout Spacing="5">
                        <Label Text="Восьмеричная (8):" 
                               FontSize="14" FontAttributes="Bold"
                               TextColor="{StaticResource Primary}"/>
                        <Label x:Name="OctalResult" 
                               FontSize="14" FontFamily="Courier New"/>
                    </VerticalStackLayout>

                    <VerticalStackLayout Spacing="5">
                        <Label Text="Шестнадцатеричная (16):" 
                               FontSize="14" FontAttributes="Bold"
                               TextColor="{StaticResource Primary}"/>
                        <Label x:Name="HexadecimalResult" 
                               FontSize="14" FontFamily="Courier New"/>
                    </VerticalStackLayout>
                </VerticalStackLayout>
            </Frame>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
