<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:ballon"
             x:Class="ballon.App">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>


            <ResourceDictionary>
                <Style TargetType="Label">
                    <Setter Property="TextColor" Value="#E8F5E9"/>
                    <Setter Property="FontFamily" Value="Arial"/>
                </Style>

                <Style x:Key="TitleLabel" TargetType="Label">
                    <Setter Property="FontSize" Value="28"/>
                    <Setter Property="FontAttributes" Value="Bold"/>
                    <Setter Property="TextColor" Value="#4CAF50"/>
                    <Setter Property="HorizontalTextAlignment" Value="Center"/>
                    <Setter Property="VerticalOptions" Value="Center"/>
                </Style>

                <Style x:Key="ChristmasFrame" TargetType="Frame">
                    <Setter Property="BackgroundColor" Value="#1B5E20"/>
                    <Setter Property="CornerRadius" Value="20"/>
                    <Setter Property="BorderColor" Value="#4CAF50"/>
                    <Setter Property="Padding" Value="20"/>
                    <Setter Property="HasShadow" Value="True"/>
                    <Setter Property="Shadow">
                        <Shadow Brush="#4CAF50" 
                    Offset="5,5" 
                    Radius="10" 
                    Opacity="0.3"/>
                    </Setter>
                </Style>

                <Style x:Key="CreateButtonFrame" TargetType="Frame">
                    <Setter Property="CornerRadius" Value="15"/>
                    <Setter Property="BorderColor" Value="#81C784"/>
                    <Setter Property="Padding" Value="25,15"/>
                    <Setter Property="HasShadow" Value="True"/>
                    <Setter Property="Shadow">
                        <Shadow Brush="#4CAF50" 
                    Offset="3,3" 
                    Radius="8" 
                    Opacity="0.4"/>
                    </Setter>
                </Style>

                <Style x:Key="CreateButtonLabel" TargetType="Label">
                    <Setter Property="FontSize" Value="22"/>
                    <Setter Property="FontAttributes" Value="Bold"/>
                    <Setter Property="TextColor" Value="#FFFFFF"/>
                    <Setter Property="HorizontalTextAlignment" Value="Center"/>
                    <Setter Property="VerticalTextAlignment" Value="Center"/>
                </Style>

                <Style x:Key="GlowingText" TargetType="Label">
                    <Setter Property="FontSize" Value="18"/>
                    <Setter Property="TextColor" Value="#C8E6C9"/>
                    <Setter Property="HorizontalTextAlignment" Value="Center"/>
                </Style>
            </ResourceDictionary>
            
        </ResourceDictionary>
    </Application.Resources>
</Application>
