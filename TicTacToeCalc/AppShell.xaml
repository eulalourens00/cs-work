<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="TicTacToeCalc.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:TicTacToeCalc"
    Shell.FlyoutBehavior="Disabled"
    Title="TicTacToeCalc">

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />

    <!--молись-->
    <ShellContent
        Title="TicTacToe"
        ContentTemplate="{DataTemplate local:TicTacToe}"
        Route="TicTacToe" />

    <ShellContent
        Title="Calculator"
        ContentTemplate="{DataTemplate local:Calc}"
        Route="Calc" />
    
</Shell>
