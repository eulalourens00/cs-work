<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ClothingStoreApp.CardOfGlamurCurtka"
             Title="CardOfGlamurCurtka">
    <ScrollView Background="Transparent">
        <VerticalStackLayout>
            <!--ЛОГО И КНОПКИ МЕНЮ - КОРЗИНА-->
            <!--ВСЕ КОПИПАСТОМ-->
            <Grid Padding="30,10,30,20" ColumnSpacing="10" HorizontalOptions="Fill">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <Frame BackgroundColor="Transparent" BorderColor="Transparent" Grid.Column="0" CornerRadius="28">
                    <ImageButton x:Name="Backto" Clicked="back_clicked" HeightRequest="56" WidthRequest="56" BackgroundColor="Transparent"
                            Source="C://cs-work//cs-work//ClothingStoreApp//Resources//Images//back.png" Aspect="AspectFill"
                    ></ImageButton>
                </Frame>

                <Frame BackgroundColor="Transparent" BorderColor="Transparent" Grid.Column="1">
                    <Image Aspect="Center" IsOpaque="False"
                           Source="C://cs-work//cs-work//ClothingStoreApp//Resources//Images//logo.png" 
                           HeightRequest="20" WidthRequest="150" />
                </Frame>

                <Frame BackgroundColor="Transparent" BorderColor="Transparent" Grid.Column="2" CornerRadius="28">
                    <ImageButton x:Name="bagButton" HeightRequest="56" WidthRequest="56" BackgroundColor="Transparent"
                         Source="C://cs-work//cs-work//ClothingStoreApp//Resources//Images//bag.png" Aspect="AspectFill" 
                    ></ImageButton>
                </Frame>
            </Grid>
            
            <!--ОГРОМНАЯ ФОТКА ЛЕЕЕЕ
            ГОЛУБЦЫЫЫ ДАВАААААЙ СЮДАААААА-->
            <VerticalStackLayout Padding="30,-30,20,0" Spacing="20">

                <!--писец 1-->
                <Frame CornerRadius="20" HeightRequest="326" WidthRequest="350" HorizontalOptions="Start" Padding="0" BorderColor="Transparent">
                    <Grid>
                        <Image Aspect="AspectFill" HeightRequest="326" WidthRequest="350"
                    Source="C://cs-work//cs-work//ClothingStoreApp//Resources//Images//main.png"></Image>

                        <!--жестко оцениваем-->
                        <Frame VerticalOptions="Start" HorizontalOptions="End" Margin="0,10,10,0"
                            HeightRequest="30" WidthRequest="70" Padding="0"
                            BackgroundColor="#FFFFFF" BorderColor="Transparent">

                            <HorizontalStackLayout Padding="10,0,0,0" Spacing="5">
                                <Image Source="C://cs-work//cs-work//ClothingStoreApp//Resources//Images//star.png" 
                            Aspect="AspectFit"
                                    HorizontalOptions="Start" VerticalOptions="Center"
                                    HeightRequest="13" WidthRequest="13"/>

                                <Label Text="4.7" VerticalOptions="Center" FontSize="14" HeightRequest="15" WidthRequest="30"/>
                            </HorizontalStackLayout>
                        </Frame>
                    </Grid>
                </Frame>
                
                <!--МИНИ-->
                <Grid Padding="20,0,30,0" ColumnSpacing="20" HorizontalOptions="Center">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <Frame Grid.Column="0" Padding="0" HeightRequest="110" WidthRequest="110" CornerRadius="20" BorderColor="Black">
                        <Grid>
                            <Image Source="C://cs-work//cs-work//ClothingStoreApp//Resources//Images//first.png" 
                                   Aspect="AspectFill" />
                         </Grid> 
                    </Frame>
                    <Frame Grid.Column="1" Padding="0" HeightRequest="110" WidthRequest="110" CornerRadius="20" BorderColor="Transparent">
                        <Grid>
                            <Image Source="C://cs-work//cs-work//ClothingStoreApp//Resources//Images//second.png" 
                                   Aspect="AspectFill" />
                        </Grid>
                    </Frame>
                    <Frame Grid.Column="2" Padding="0" HeightRequest="110" WidthRequest="110" CornerRadius="20" BorderColor="Transparent">
                        <Grid>
                            <Image Source="C://cs-work//cs-work//ClothingStoreApp//Resources//Images//third.png" 
                                    Aspect="AspectFill"/>
                        </Grid>
                    </Frame>
                </Grid>
            </VerticalStackLayout>

            <!--У НАС ТУТ ТЕПЛО-->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Frame Grid.Column="0">
                    <Label Text="Avoine Hooded&#10;Quilted Jacket" TextColor="Black" FontSize="22"
                    HeightRequest="38" HorizontalTextAlignment="Start"/>
                </Frame>
                <Frame Grid.Column="1">
                    <Image Aspect="AspectFill" WidthRequest="55" HeightRequest="55"
                       Source="C://cs-work//cs-work//ClothingStoreApp//Resources//Images//tag.png"  ></Image>
                </Frame>
            </Grid>

            <!--КУБИКИ С ПРОДАЖАМИ-->
            <Grid Padding="30,0,30,0" ColumnSpacing="20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <Frame Grid.Column="0" HeightRequest="122" WidthRequest="169" CornerRadius="10" BackgroundColor="#F5F5F5" BorderColor="Transparent">
                    <Grid Padding="10,10,10,10">
                        <Label FontSize="14" Text="CHOOSE&#10;COLOR" TextColor="#FFFFFF" MinimumWidthRequest="112"/>

                        <Label FontSize="51"
                            Text="Zelox" TextColor="#0000001A" Opacity="0.1"
                            LineBreakMode="NoWrap" MaxLines="1"
                            Margin="0,25,0,0"
                            HorizontalOptions="Start"
                            VerticalOptions="Start"></Label>    
                    </Grid>
                </Frame>

                <Frame Grid.Column="2" HeightRequest="122" WidthRequest="169" CornerRadius="10"
           BackgroundColor="#000000" BorderColor="Transparent">

                    <Grid Padding="10,10,10,10">
                        <Label FontSize="14" Text="CHOOSE&#10;SIZE" TextColor="#FFFFFF" MinimumWidthRequest="112"/>

                        <Label FontSize="51"
                           Text="Zelox" TextColor="#0000001A" Opacity="0.1"
                           Margin="0,25,0,0"
                           LineBreakMode="NoWrap" MaxLines="1"
                           HorizontalOptions="Start"
                           VerticalOptions="Start"
                        ></Label>
                    </Grid>
                </Frame>

            </Grid>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>