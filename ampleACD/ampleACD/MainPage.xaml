<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ampleACD.MainPage">

    <ScrollView>
        <VerticalStackLayout Spacing="20" Padding="20">

            <Label Text="Вычисление функции Ample" 
                   FontSize="24"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   TextColor="{StaticResource Primary}"/>
            <Frame BackgroundColor="LightBlue"
                   Padding="15"
                   CornerRadius="10">
                <VerticalStackLayout Spacing="15">
                    <Label Text="Входные параметры:" FontSize="16" FontAttributes="Bold"/>

                    <Grid ColumnDefinitions="Auto,1*" RowDefinitions="Auto,Auto" RowSpacing="10">
                        <Label Grid.Row="0" Grid.Column="0"  Text="Параметр c:"  VerticalOptions="Center"/>
                        <Entry Grid.Row="0" Grid.Column="1"
                               x:Name="EntryC" Placeholder="Введите число c..." Keyboard="Numeric" Text="2.5"/>

                        <Label Grid.Row="1" Grid.Column="0" Text="Параметр d:" VerticalOptions="Center"/>
                        <Entry Grid.Row="1" Grid.Column="1"
                               x:Name="EntryD"  Placeholder="Введите число d..." Keyboard="Numeric" Text="1.3"/>
                    </Grid>

                    <Button x:Name="CalculateButton" Text="Вычислить" Clicked="OnCalculateClicked"
                            BackgroundColor="{StaticResource Primary}" TextColor="White" CornerRadius="20"
                            HeightRequest="50"/>
                </VerticalStackLayout>
            </Frame>

            <Frame x:Name="ResultsFrame" BackgroundColor="LightBlue" Padding="15" CornerRadius="10" IsVisible="False">
                <VerticalStackLayout Spacing="15">
                    <Label Text="Результаты вычислений:" FontSize="16" FontAttributes="Bold"/>

                    <Border Stroke="{StaticResource Primary}"
                            StrokeThickness="1" StrokeShape="RoundRectangle 5">
                        <ScrollView HorizontalScrollBarVisibility="Always">
                            <Grid x:Name="ResultsGrid"
                                  ColumnDefinitions="40,80,80,80,80,120"
                                  RowDefinitions="Auto"
                                  Padding="10,5" ColumnSpacing="10" RowSpacing="5"/>
                        </ScrollView>
                    </Border>

                    <Grid ColumnDefinitions="1*,1*" RowDefinitions="Auto,Auto" 
                          ColumnSpacing="10" RowSpacing="5">

                        <Label Grid.Row="0" Grid.Column="0"
                               Text="Сумма s:" FontAttributes="Bold"/>
                        <Label Grid.Row="0" Grid.Column="1"
                               x:Name="SumLabel"
                               FontAttributes="Bold"/>

                        <Label Grid.Row="1" Grid.Column="0"
                               Text="Среднее арифметическое:" FontAttributes="Bold"/>
                        <Label Grid.Row="1" Grid.Column="1"
                               x:Name="AverageLabel"
                               FontAttributes="Bold" TextColor="{StaticResource Primary}"/>
                    </Grid>
                </VerticalStackLayout>
            </Frame>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
